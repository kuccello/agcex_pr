<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.emergentbit.krispysgamecontrollersamples"
    android:versionCode="1"
    android:versionName="1.0" >

    <!-- Explicitly state that touch screen is not required to ensure the app will show in play store for non-touch Android devices -->
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <uses-sdk
        android:minSdkVersion="12"
        android:targetSdkVersion="19" />

    <application
        android:name=".SampleApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.emergentbit.krispysgamecontrollersamples.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.emergentbit.krispysgamecontrollersamples.JoystickActivity"
            android:label="@string/title_activity_joystick" >
        </activity>
        <activity
            android:name="com.emergentbit.krispysgamecontrollersamples.DpadActivity"
            android:label="@string/title_activity_dpad" >
        </activity>
        <activity
            android:name="com.emergentbit.krispysgamecontrollersamples.TriggerActivity"
            android:label="@string/title_activity_trigger" >
        </activity>
        <activity
            android:name="com.emergentbit.krispysgamecontrollersamples.MultiPlayerActivity"
            android:label="@string/title_activity_multi_player" >
        </activity>
    </application>

</manifest>
